{
  "name": "Node.js & TypeScript",
  "build": {
    "dockerfile": "Dockerfile",
    "args": {
      "VARIANT": "16"
    }
  },

  "settings": {
    "editor.formatOnSave": true,
    "terminal.integrated.shell.linux": "/bin/bash"
  },

  "extensions": ["dbaeumer.vscode-eslint", "esbenp.prettier-vscode"],
  "postCreateCommand": "npm install",
  "remoteUser": "node"
}
